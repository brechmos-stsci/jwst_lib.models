{
    "title" : "AMI LG analysis data model",
    "allOf" : [
        {"$ref" : "core.schema.json"},
        {
            "type" : "object",
            "properties" : {

                "fit_image" :
                {
                    "type" : "data",
                    "title" : "Fitted image",
                    "fits_hdu" : "FIT",
                    "default" : 0.0,
                    "ndim" : 2,
                    "dtype" : "float32"
                },

                "resid_image" :
                {
                    "type" : "data",
                    "title" : "Residual image",
                    "fits_hdu" : "RESID",
                    "default" : 0.0,
                    "dtype" : "float32"
                },

                "closure_amp_table": {
                    "type": "data",
                    "title": "Closure amplitudes table",
                    "fits_hdu": "CLOSURE_AMP",
                    "dtype": [
                        {"name": "coeffs", "dtype": "float64"}
                    ]
                },

                "closure_phase_table": {
                    "type": "data",
                    "title": "Closure phases table",
                    "fits_hdu": "CLOSURE_PHA",
                    "dtype": [
                        {"name": "coeffs", "dtype": "float64"}
                    ]
                },

                "fringe_amp_table": {
                    "type": "data",
                    "title": "Fringe amplitudes table",
                    "fits_hdu": "FRINGE_AMP",
                    "dtype": [
                        {"name": "coeffs", "dtype": "float64"}
                    ]
                },

                "fringe_phase_table": {
                    "type": "data",
                    "title": "Fringe phases table",
                    "fits_hdu": "FRINGE_PHA",
                    "dtype": [
                        {"name": "coeffs", "dtype": "float64"}
                    ]
                },

                "pupil_phase_table": {
                    "type": "data",
                    "title": "Pupil phases table",
                    "fits_hdu": "PUPIL_PHA",
                    "dtype": [
                        {"name": "coeffs", "dtype": "float64"}
                    ]
                },
 
                "solns_table": {
                    "type": "data",
                    "title": "Solutions table",
                    "fits_hdu": "SOLNS",
                    "dtype": [
                        {"name": "coeffs", "dtype": "float64"}
                    ]
                }
            }
        }
    ]
}

